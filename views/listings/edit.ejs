<% layout("/layouts/boilerplate.ejs")-%>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3><b>Edit Listings</b></h3>
    <form
      method="post"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label"> Title </label>
        <input
          name="listing[title]"
          class="form-control"
          type="text"
          value="<%= listing.title %>"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label"> Description </label>
        <textarea
          name="listing[description]"
          type="text"
          class="form-control"
          required
        >
      <%= listing.description%> 
      </textarea
        >
        <div class="invalid-feedback">Please Enter Short Description</div>
      </div>

      <div class="mb-3">
        Original Listing image <br />
        <img
          style="height: 200px; width: 200px"
          src="<%= originalImageUrl %>"
        />
      </div>

      <div class="mb-3">
        <label for="image" class="form-label"> Upload New Image</label>
        <input class="form-control" name="listing[image]" type="file" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <div class="mb-3">
            <label for="price" class="form-label"> Price </label>
            <input
              name="listing[price]"
              class="form-control"
              type="number"
              value="<%= listing.price %>"
              required
            />
            <div class="invalid-feedback">Plese Enter Valid Price</div>
          </div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label"> Country </label>
          <input
            class="form-control"
            name="listing[country]"
            type="text"
            value="<%= listing.country %>"
            required
          />
          <div class="invalid-feedback">Country Name Should be Valid</div>
        </div>
      </div>

      <div class="mb-3">
        <div class="mb-3">
          <label for="location" class="form-label"> Location </label>
          <input
            name="listing[location]"
            class="form-control"
            type="text"
            value="<%= listing.location %>"
            required
          />
          <div class="invalid-feedback">Location Should be Valid</div>
        </div>
      </div>

      <button class="btn btn-dark edit-btn mt-3">Add</button>
      <br /><br />
    </form>
  </div>
</div>
<script src="/js/script.js"></script>
